{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Assembler (make build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/assembler",
            "args": [
                "input/prog3/prog1.as",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make"
        }
    ]
}